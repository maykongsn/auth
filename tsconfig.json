{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["ESNext"],
    "module": "commonjs",
    "experimentalDecorators": true,
		"emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
	"exclude": ["node_modules", "dist"],
	"ts-node": {
		"files": true
	}
}
